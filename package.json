{
  "name": "phaser-endless-miner",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx server/index.ts",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "test:ci": "npm run typecheck && vitest --run",
    "verify": "npm run typecheck && npm run test -- --run",
    "test:event-log": "vitest --run packages/event-log/tests/engine.test.ts"
  },
  "dependencies": {
    "@colyseus/schema": "^2.0.16",
    "@colyseus/ws-transport": "^0.15.3",
    "colyseus": "^0.15.57",
    "colyseus.js": "^0.15.26",
    "nanoid": "^5.0.7",
    "phaser": "^3.80.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "workspaces": [
    "packages/event-log"
  ]
}
